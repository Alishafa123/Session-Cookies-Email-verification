<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Table data</title>
    <style>
        body {
            background-color: rgb(0, 0, 0);
        }

        .flexbox {
            display: flex;
            flex-direction: column;
            flex-wrap: wrap;
            align-items: center;
            text-align: center;
            justify-content: center;
            margin-top: 10%;
        }

        .image {
            height: 55%;
        }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            height: 400px;
            width: 300px;
            margin: 20px;
            background-color: rgb(255, 255, 255);
        }

       

        .user_details {
            padding: 2px 16px;
            height: 45%;
        }

        li {
        display: inline;
        margin: 25px;
        }

        li a {
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 25px;
        }
  #btn{
             margin: 10px;
            height: 40px;
            width: 200px;
            

  }

  .topnav    .dropdown{
    display:inline-block;
    position:relative;
  }

 .topnav .dropdown button{
    border:none;
    padding:8px 16px;
    background-color:#2196F3;
    color:white;
    transition:.3s;
    cursor:pointer;
  }
  
 .topnav .dropdown:hover button{
    background-color:#2196F3;
  }
  
 .topnav .dropdown div{
    background-color:#fff;
    box-shadow:0 4px 8px rgba(0,0,0,0.2);
    z-index:1;
    visibility:hidden;
    position:absolute;
    min-width:100%;
    opacity:0;
    transition:.3s;
  }
  
 .topnav .dropdown:hover div{
    visibility:visible;
    opacity:1;
  }
  
  .topnav .dropdown div a{
    display:block;
    text-decoration:none;
    padding:8px;
    color:#000;
    transition:.1s;
    white-space:nowrap;
  }
  
  .topnav .dropdown div a:hover{
    background-color:#2196F3;
    color:#fff;
  }
    </style>
</head>

<body>

    
    <ul>
        <li><a href="">Home</a></li>
        <li><a href="">About</a></li>
        <li><a href="displayTable.ejs">Memebers</a></li>
      </ul>
    <hr>

    <div class="topnav">
     
        <div class="dropdown">
            <button>Sorting</button>
            <div>
              <a href="/PDF/Sorting/ASC/<%=+CurrentPage%>">Ascending</a>
              <a href="/PDF/Sorting/DESC/<%=+CurrentPage%>">Descending</a>
            </div>
          </div> 


          
        <div class="search-container">
            <form action="/read/Sorting/ASC/<%=+CurrentPage%>" method="get">
                
                <button type="submit">Change View</button>
            </form>
            
        </div>
    </div>



    <div class="flexbox">
        <% dataa.forEach(function(dataa){ %>
            <div class="card">
                <div class="image">
                   
                    <!-- <img src="/images/<%= dataa.image %>" alt="<%= dataa.image %>"
                        style="height: 100%; width: 100%;">
                </div>
                <div class="user_details"> -->
                    <h4>
                        Username:<%= dataa.username %>
                    </h4>
                    <h4>
                       Name: <%= dataa.name %>
                    </h4>
                    <h4>
                       Email:<%= dataa.email %>
                    </h4>
                    <h4>
                        Phone:<%= dataa.phonenumber %>
                    </h4>
                    <h4>
                       Qualification <%= dataa.qualification %>
                    </h4>
                    <h4>
                       Age:<%= dataa.age %>
                    </h4>
                </div>
            </div>
            <% }); %>
    </div>
    <div class="container mt-3 d-flex justify-content-cente">
        <ul class="pagination">

            <% if(CurrentPage==1) {%>
                <li class="page-item disabled"><a class="page-link" href="">Previous</a></li>
                <% } else {%>
                    <li class="page-item"><a class="page-link" href="/all?page=<%=CurrentPage-1%>">Previous</a></li>
                    <% } %>

                        <% for(let i=1; i<=pages; i++){ %>
                            <% if(i==CurrentPage){ %>
                                <li class="page-item active"><a class="page-link" href="/all?page=<%=i%>">
                                        <%=i%>
                                    </a></li>
                                <% } else {%>
                                    <li class="page-item"><a class="page-link" href="/all?page=<%=i%>">
                                            <%=i%>
                                        </a></li>
                                    <% } %>
                                        <% } %>

                                            <% if(CurrentPage==lastPage) {%>
                                                <li class="page-item disabled"><a class="page-link" href="">Next</a>
                                                </li>
                                                <% } else {%>
                                                    <li class="page-item "><a class="page-link"
                                                            href="/all?page=<%=+CurrentPage+1%>">Next</a></li>
                                                    <% } %>
        </ul>
    </div>
    <form action="/usermenu">
        <input  id="btn" type="submit" value="OK">
    </form>
</body>

</html>