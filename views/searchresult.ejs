<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Table data</title>
    <style>
        body {
            background-color: rgb(0, 0, 0);
        }

        .flexbox {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            align-items: center;
            text-align: center;
            justify-content: center;
            margin-top: 10%;
        }

        .image {
            height: 55%;
        }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            height: 400px;
            width: 300px;
            margin: 20px;
            background-color: rgb(255, 255, 255);
        }

       

        .user_details {
            padding: 2px 16px;
            height: 45%;
        }

        li {
        display: inline;
        margin: 25px;
        }

        li a {
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 25px;
        }
  #btn{
             margin: 10px;
            height: 40px;
            width: 200px;
            

  }
    </style>
</head>

<body>

    
    <ul>
        <li><a href="">Home</a></li>
        <li><a href="">About</a></li>
        <li><a href="displayTable.ejs">Memebers</a></li>
      </ul>
    <hr>

    <div class="flexbox">
        <% dataa.forEach(function(dataa){ %>
            <div class="card">
                <div class="image">
                   
                    <!-- <img src="/images/<%= dataa.image %>" alt="<%= dataa.image %>"
                        style="height: 100%; width: 100%;">
                </div>
                <div class="user_details"> -->
                    <h4>
                        Username:<%= dataa.username %>
                    </h4>
                    <h4>
                       Name: <%= dataa.name %>
                    </h4>
                    <h4>
                       Email:<%= dataa.email %>
                    </h4>
                    <h4>
                        Phone:<%= dataa.phonenumber %>
                    </h4>
                    <h4>
                       Qualification <%= dataa.qualification %>
                    </h4>
                    <h4>
                       Age:<%= dataa.age %>
                    </h4>
                </div>
            </div>
            <% }); %>
    </div>

    <form action="/usermenu">
        <input  id="btn" type="submit" value="OK">
    </form>
</body>

</html>